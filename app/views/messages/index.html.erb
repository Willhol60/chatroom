<div class="container">
    <h1 style="font-family: Arial, sans-serif;">The Chatroom</h1>

    <div class="messages">
        <% @messages.each do |message| %>
            <div class="sender">
                <%= message.user.email %>
                <%= message.created_at.strftime("%a %b %e at %l:%M %p") %>
            </div>
            <div class="message">
                <%= message.content %>
            </div>
        <% end %>
    </div>

    <%= simple_form_for @message, html:{class: "d-flex"} do |f| %>
        <%= f.input :content, label: false, placeholder: "Write your message here", wrapper_html: {class: "flex-grow-1"} %>
        <%= f.submit "Send", class: "btn btn-primary mb-3" %>
    <% end %>
</div>