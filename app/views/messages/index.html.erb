<div class="container" data-controller="chatroom-subscription">
    <h1 style="font-family: Arial, sans-serif;">The Chatroom</h1>

    <div class="messages" data-chatroom-subscription-target="messages">
        <% @messages.each do |message| %>
            <%= render "message", message: message %>
        <% end %>
    </div>

    <%= simple_form_for @message, html:{data: {action: "turbo:submit-end->chatroom-subscription#resetForm"}, class: "d-flex"} do |f| %>
        <%= f.input :content, label: false, placeholder: "Write your message here", wrapper_html: {class: "flex-grow-1"} %>
        <%= f.submit "Send", class: "btn btn-primary mb-3" %>
    <% end %>
</div>